<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Checkout\Block\Cart\LayoutProcessor" type="Boolfly\GiaoHangNhanh\Block\Cart\LayoutProcessor"/>
    <preference for="Magento\Checkout\Block\Checkout\AttributeMerger" type="Boolfly\GiaoHangNhanh\Block\Checkout\AttributeMerger"/>
    <preference for="Magento\Customer\Controller\Address\FormPost" type="Boolfly\GiaoHangNhanh\Controller\Customer\Address\FormPost"/>
    <!--<preference for="Boolfly\GiaoHangNhanh\Model\Api\Rest\Helper\ResponseReaderInterface" type="Boolfly\GiaoHangNhanh\Model\Api\Rest\Helper\ResponseReader"/>-->
    <type name="Boolfly\GiaoHangNhanh\Console\GenerateRegionCommand">
        <arguments>
            <!-- configure the command name via constructor $name argument -->
            <argument name="name" xsi:type="string">region:generate</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="generate_region_data" xsi:type="object">
                    Boolfly\GiaoHangNhanh\Console\GenerateRegionCommand
                </item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Magento\Sales\Model\ResourceModel\Order\Grid" type="Magento\Sales\Model\ResourceModel\Grid">
        <arguments>
            <argument name="columns" xsi:type="array">
                <item name="ghn_status" xsi:type="string">sales_order.ghn_status</item>
                <item name="tracking_code" xsi:type="string">sales_order.tracking_code</item>
                <item name="ghn_canceling_status" xsi:type="string">sales_order.ghn_canceling_status</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Checkout\Model\ShippingInformationManagement">
        <plugin name="SaveAddressInformationBefore" type="Boolfly\GiaoHangNhanh\Plugin\Checkout\Model\ShippingInformationManagement" sortOrder="22"/>
    </type>
    <type name="Magento\Quote\Model\ShippingMethodManagement">
        <plugin name="EstimateByAddressIdBefore" type="Boolfly\GiaoHangNhanh\Plugin\Quote\Model\EstimateByAddressIdBefore" sortOrder="23"/>
        <plugin name="EstimateByExtendedAddressBefore" type="Boolfly\GiaoHangNhanh\Plugin\Quote\Model\EstimateByExtendedAddressBefore" sortOrder="23"/>
    </type>
    <type name="Magento\Checkout\Model\TotalsInformationManagement">
        <plugin name="CalculateBefore" type="Boolfly\GiaoHangNhanh\Plugin\Checkout\Model\TotalsInformationManagement" sortOrder="22"/>
    </type>
    <type name="Magento\Checkout\Block\Checkout\DirectoryDataProcessor">
        <plugin name="DirectoryDataProcessorAfter" type="Boolfly\GiaoHangNhanh\Plugin\Checkout\Block\Checkout\DirectoryDataProcessor" sortOrder="22" />
    </type>
    <type name="Magento\Quote\Model\Quote\Address">
        <plugin name="ExportCustomerAddressAfter" type="Boolfly\GiaoHangNhanh\Plugin\Quote\Model\Quote\Address" sortOrder="42" />
    </type>
    <type name="Magento\Shipping\Model\Shipping">
        <plugin name="CollectRatesBefore" type="Boolfly\GiaoHangNhanh\Plugin\Shipping\Model\Shipping" sortOrder="22" />
    </type>
    <type name="Magento\Sales\Model\Order">
        <plugin name="CanCancelAfter" type="Boolfly\GiaoHangNhanh\Plugin\Sales\Model\Order" sortOrder="12" />
    </type>
    <type name="Magento\Sales\Block\Adminhtml\Order\Create\Shipping\Address">
        <plugin name="ShippingAddress-GetFormValuesBefore" type="Boolfly\GiaoHangNhanh\Plugin\Sales\Block\Adminhtml\Order\Create\Shipping\Address" sortOrder="12" />
    </type>
    <type name="Magento\Sales\Block\Adminhtml\Order\Create\Billing\Address">
        <plugin name="BillingAddress-GetFormValuesBefore" type="Boolfly\GiaoHangNhanh\Plugin\Sales\Block\Adminhtml\Order\Create\Billing\Address" sortOrder="12" />
    </type>
    <!--Process response data-->
    <virtualType name="CalculateFeeReader" type="Boolfly\GiaoHangNhanh\Model\Api\Rest\Helper\ResponseReader">
        <arguments>
            <argument name="property" xsi:type="string">CalculatedFee</argument>
        </arguments>
    </virtualType>
    <virtualType name="CurrentStatusReader" type="Boolfly\GiaoHangNhanh\Model\Api\Rest\Helper\ResponseReader">
        <arguments>
            <argument name="property" xsi:type="string">CurrentStatus</argument>
        </arguments>
    </virtualType>
    <virtualType name="OrderCodeReader" type="Boolfly\GiaoHangNhanh\Model\Api\Rest\Helper\ResponseReader">
        <arguments>
            <argument name="property" xsi:type="string">OrderCode</argument>
        </arguments>
    </virtualType>
    <type name="Boolfly\GiaoHangNhanh\Model\Api\Rest\Service\Shipping\Fee\Calculator">
        <arguments>
            <argument name="responseReader" xsi:type="object">CalculateFeeReader</argument>
        </arguments>
    </type>
    <type name="Boolfly\GiaoHangNhanh\Model\Api\Rest\Service\Order\Tracker">
        <arguments>
            <argument name="responseReader" xsi:type="object">CurrentStatusReader</argument>
        </arguments>
    </type>
    <type name="Boolfly\GiaoHangNhanh\Model\Api\Rest\Service\Order\Synchronizer">
        <arguments>
            <argument name="responseReader" xsi:type="object">OrderCodeReader</argument>
        </arguments>
    </type>
    <type name="Boolfly\GiaoHangNhanh\Model\Api\Rest\Service\Shipping\Services\Provider">
        <arguments>
            <argument name="responseReader" xsi:type="object">Boolfly\GiaoHangNhanh\Model\Api\Rest\Helper\ResponseReader</argument>
        </arguments>
    </type>
    <type name="Boolfly\GiaoHangNhanh\Model\Api\Rest\Service\DistrictProvider">
        <arguments>
            <argument name="responseReader" xsi:type="object">Boolfly\GiaoHangNhanh\Model\Api\Rest\Helper\ResponseReader</argument>
        </arguments>
    </type>
</config>
